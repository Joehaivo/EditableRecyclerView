<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ripple_my_apps_item">

    <ImageView
        android:id="@+id/iv_app_icon1"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/photobadge"
        />

    <ImageView
        android:id="@+id/iv_app_icon2"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_app_icon2"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/photobadge"
        />

    <ImageView
        android:id="@+id/iv_app_icon3"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_app_icon1"
        tools:src="@drawable/photobadge"
        />

    <ImageView
        android:id="@+id/iv_app_icon4"
        android:layout_width="34dp"
        android:layout_height="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_app_icon3"
        app:layout_constraintTop_toBottomOf="@id/iv_app_icon2"
        tools:src="@drawable/photobadge"
        />

</androidx.constraintlayout.widget.ConstraintLayout>